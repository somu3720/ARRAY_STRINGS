steps:
1.create max variable 
2.if(i==max) chunkcount +1


class Solution {
    public int maxChunksToSorted(int[] arr) {
        
        int max = 0;
        int chunkcount = 0;
        
        for(int i=0;i<arr.length;i++)
        {
            max = Math.max(arr[i],max);
            
            if(i==max)
            {
                chunkcount++;
            }
        }
        
    
            
       return chunkcount;     
    }
}
